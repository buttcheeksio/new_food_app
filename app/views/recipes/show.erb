<h1><%= @recipe.title %></h1>
<p>Written by <%= @recipe.user.email %></p>
<p><%= @recipe.description %></p>

<h2>Ingredients</h2>
<ol>
  <% @recipe.ingredients.each do |ingredient| %>
    <% @recipe.recipe_ingredients.map do |recipe_ingredient| %>
      <% if recipe_ingredient.ingredient_id == ingredient.id %>
        <%= "#{ingredient.name}, #{recipe_ingredient.amount}" %><br>
      <% end %>
    <% end %>
  <% end %>
</ol>

<h2>Directions</h2>
<ol>
  <% @recipe.directions.each do |direction| %>
    <li><%= direction.step %></li><br>
  <% end %>
</ol>

<% if user_signed_in? %>
  <%= link_to "Back", root_path, class: "btn btn-default" %>
  <%= link_to "New", new_recipe_path, class: "btn btn-default" %>
  <%= link_to "Edit", edit_recipe_path, class: "btn btn-default"  %>
  <%= link_to "Delete", recipe_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default" %>
<% else %>
  <%= link_to "Back", root_path, class: "btn btn-default" %>
<% end %>
