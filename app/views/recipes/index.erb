<% if user_signed_in? %>
  <%= link_to "Click Here to Make a New Recipe", new_recipe_path, class: "btn btn-primary btn-block" %><br>
<% end  %>

<div class="container">
  <div class="row">
    <% @recipes.each do |recipe| %>
    <div class="col-md-4">
      <div class="recipe-box">
        <% if recipe.image? %>
          <%= link_to (image_tag recipe.image.url, class: "recipe-index"), recipe %>
        <% end %>
          <h3><%= link_to recipe.title, recipe %></h3>
          <%= recipe.description %><br>
          <%= link_to "Edit", "/recipes/#{recipe.id}/edit", class: "btn btn-default btn-xs" %>
          <%= link_to "Delete", "/recipes/#{recipe.id}", method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default btn-xs" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
