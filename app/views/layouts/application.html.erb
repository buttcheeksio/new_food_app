<!DOCTYPE html>
<html>
  <head>
    <title>NewFoodApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/" >Food App</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Home</a></li>
          <li><a href="/recipes">Recipes</a></li>
          <li><a href="/ingredients">Ingredients</a></li>
        </ul>

        <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/cupboard"> My Cupboard </a></li>
            <li><a href="/recipe-search"> Search </a></li>
            <li><a href="/account"><span class="glyphicon glyphicon-user"></span> My Account </a></li>
            <li><%= link_to('Logout', destroy_user_session_path, class: "glyphicon glyphicon-log-out", method: :delete) %></li>
          </ul>
        <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/recipe-search"> Search </a></li>
            <li><a href="/users/sign_up"><span class="glyphicon glyphicon-user"></span> Sign Up </a></li>
            <li><a href="/users/sign_in"><span class="glyphicon glyphicon-log-in"></span> Login </a></li>
          </ul>
        <% end %>

      </div>
    </nav>

    <div id="under-nav" class="container">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: "alert" %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
