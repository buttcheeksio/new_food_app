<h2><%= @ingredient.name %></h2>
<p><%= @ingredient.ingredient_type %></p>

<% if user_signed_in? %>
  <%= link_to "Back", ingredients_path, class: "btn btn-default" %>
  <%= link_to "New", new_ingredient_path, class: "btn btn-default" %>
  <%= link_to "Edit", edit_ingredient_path, class: "btn btn-default"  %>
  <%= link_to "Delete", ingredient_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default" %>
<% else %>
  <%= link_to "Back", ingredients_path, class: "btn btn-default" %>
<% end %>
